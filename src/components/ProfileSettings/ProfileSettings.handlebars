<div class='user-settings block'>
  <div class='avatar-info'>
    <p class=''>Your current image</p>
    <div class='flex-c'>
      {{#if user.image}}
        <img class='icon user-image' src='{{user.image}}' alt='' />
      {{else}}
        <img class='icon user-image' src='static/images/default.jpeg' alt='' />
      {{/if}}
    </div>
    <p class='link'>upload image files</p>
  </div>
  <hr />
  <div class='settings-main-info'>
    <p class='settings-main-info-title'>Main information</p>
    <div class='info-field'><p>Name</p><input
        type='text'
        placeholder='Enter your name'
        value='{{user.name.first}}'
      /></div>
    <div class='info-field fs-350'><p>Last name</p><input
        type='text'
        placeholder='Enter your last name'
        value='{{user.name.last}}'
      /></div>
    <div class='info-field fs-300'><p>Place</p><input
        type='text'
        placeholder='Enter place where you live'
        {{user.place}}
      /></div>
    <div class='info-field fs-350'><p>Birth date</p><input
        type='datetime'
        placeholder='Enter your birth date'
        {{user.birtdate}}
      /></div>
  </div>
  <hr />
  <div class='settings-additional-info'>
    <p class='settings-additional-info-title'>Additional information</p>
    <div class='info-field'>
      <p class='info-field-title'>Musical preferences</p>
      <span class='textarea' role='textbox' contenteditable>{{user.info.music}}</span>
    </div>
    <div class='info-field'>
      <p class='info-field-title'>Film preferences</p>
      <span class='textarea' role='textbox' contenteditable>{{user.info.film}}</span>
    </div>
    <div class='info-field'>
      <p class='info-field-title'>Hobbies</p>
      <span class='textarea' role='textbox' contenteditable>{{user.info.hobbie}}</span>
    </div>
    <div class='info-field'>
      <p class='info-field-title'>Thoughts</p>
      <span class='textarea' role='textbox' contenteditable>{{user.info.about}}</span>
    </div>
  </div>
  <hr />
  <div class='save-info'>
    <a class='block btn-primary __disabled'>
      <p class='save-info-text'>back</p>
    </a>
    <div class='block btn-like __disabled' id='save-settings-btn'>
      <img class='icon' src='static/icons/add_square.svg' alt='' />
      <p class='save-info-text'>save information</p>
    </div>
  </div>
</div>