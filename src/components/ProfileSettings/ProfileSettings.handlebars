<div class="user-settings block">
    <div class="avatar-info">
        <p class="">Your current image</p>
        <div class="flex-c">
            <img class="icon user-image" src="static/images/p1.jpeg" alt="">
        </div>
        <p class="link">upload image files</p>
    </div>
    <hr>
    <div class="settings-main-info">
        <p class="settings-main-info-title">Main information</p>
        <div class="info-field"><p>Name</p><input type="text" placeholder="Enter your name"></div>
        <div class="info-field"><p>Last name</p><input type="text" placeholder="Enter your last name"></div>
        <div class="info-field"><p>Place</p><input type="text" placeholder="Enter place where you live"></div>
        <div class="info-field"><p>Birth date</p><input type="datetime" placeholder="Enter your birth date"></div>
    </div>
    <hr>
    <div class="settings-additional-info">
        <p class="settings-additional-info-title">Additional information</p>
        <div class="info-field">
            <p class="info-field-title">Musical preferences</p>
            <span class="textarea" role="textbox" contenteditable></span>
        </div>
        <div class="info-field">
            <p class="info-field-title">Film preferences</p>
            <span class="textarea" role="textbox" contenteditable></span>
        </div>
        <div class="info-field">
            <p class="info-field-title">Hobbies</p>
            <span class="textarea" role="textbox" contenteditable></span>
        </div>
        <div class="info-field">
            <p class="info-field-title">Thoughts</p>
            <span class="textarea" role="textbox" contenteditable></span>
        </div>
    </div>
    <hr>
    <div class="save-info flex-c">
        <div class="block btn-like">
            <img class="icon" src="static/icons/add_square.svg" alt="">
            <p class="save-info-text">save information</p>
        </div>
    </div>
</div>
