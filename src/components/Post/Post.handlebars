<div class='post grid block' id='{{post.id}}'>
  <div class='header'>
    <div class='author'>
      {{#if post.author.image}}
        <img class='icon' src='{{post.author.image}}' alt='' />
      {{else}}
        <img class='icon' src='static/images/default.jpeg' alt='' />
      {{/if}}
      <div class='info'>
        <p class='link selectable author-name'>{{post.author.name.first}} {{post.author.name.last}}</p>
        <p class='selectable text-light'>{{post.postedTime}}</p>
      </div>
    </div>
    <div class='settings-container'>
      <div class='settings'>
        <img src='static/icons/arrow_down.svg' alt='' class='btn' />
      </div>
      <div class='settings-info block'>
        <div class='element btn-like __disabled'>
          <p class='element-text'>Complain</p>
        </div>
        <div class='element btn-like __disabled'>
          <p class='element-text'>Hide post</p>
        </div>
      </div>
    </div>
  </div>
  {{#if post.message}}
    <div class='title'>
      <p class='selectable title-text'>{{post.message}}</p>
      {{! need to be checked somehow }}

      {{#if post.message}}
        <p class='link'>more text...</p>
      {{/if}}
    </div>
  {{/if}}
  {{#if post.images}}
    <div class='content'>
      {{!-- still need logic to draw more than 1 images --}}

      {{#each post.images as |image|}}
        <img class='content-part' src='{{image}}' alt='' />
      {{/each}}
      {{!-- <img class='content-part' src='static/images/p2.png' alt='' /> --}}
    </div>
  {{/if}}
  <div class='reactions'>
    {{#if post.likesCount}}
      <div class='like block reactions-part btn-like'>
        <img src='static/icons/like.svg' alt='' class='icon' />
        <p>{{post.likesCount}}</p>
      </div>
    {{else}}
      <div class='like block reactions-part btn-like __disabled'>
        <img src='static/icons/like.svg' alt='' class='icon' />
        <p>Nan</p>
      </div>
    {{/if}}
    <div class='comment block reactions-part btn-like'>
      <img src='static/icons/comment.svg' alt='' class='icon' />
      <p>comment</p>
    </div>
    <div class='reaction block reactions-part btn-like __disabled'>
      <img src='static/icons/repost.svg' alt='' class='icon' />
      <p>repost</p>
    </div>
    <div class='watch reactions-part'>
      <img src='static/icons/watch.svg' alt='' class='icon' />
      <p>{{post.watchedCount}}</p>
      {{!-- <p>1.25k</p> --}}
    </div>
  </div>
