{{{header}}}

<div class="form">
  <div class="form__field">
    <label for="email">Email</label>
    <input id="email" name="email" type="email" class="form__input" placeholder="Enter your email...">
  </div>
  <div class="form__field">
    <div class="form__fullname">
      <label for="first-name">First Name</label>
      <input id="first-name" name="first-name" type="text" class="form__input" placeholder="Enter your first name...">

      <label for="second-name">Second Name</label>
      <input id="second-name" name="second-name" type="text" class="form__input"
        placeholder="Enter your second name...">
    </div>
  </div>
  <div class="form__field">
    <label for="password">Password</label>
    <input id="password" name="password" type="password" class="form__input" placeholder="Enter your password...">
  </div>
  <div class="form__field">
    <label for="password">Repeat Password</label>
    <input id="password" name="password" type="password" class="form__input" placeholder="Repeat your password...">
  </div>
  <div class="form__submit">
    <button id="submit" type="submit" class="form__btn__submit">Signup</button>
  </div>
</div>