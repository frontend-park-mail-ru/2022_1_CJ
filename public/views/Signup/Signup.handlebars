{{{header}}}

<form id="login-form" class="form">
  <div class="form__field">
    <label for="email">Email</label>
    <input id="email" name="email" type="email" class="form__input" placeholder="Enter your email..." required>
  </div>
  <div class="form__field">
    <div class="form__fullname">
      <label for="firstname">First Name</label>
      <input id="firstname" name="firstname" type="text" class="form__input" placeholder="Enter your first name..."
        required>

      <label for="lastname">Last Name</label>
      <input id="lastname" name="lastname" type="text" class="form__input" placeholder="Enter your second name..."
        required>
    </div>
  </div>
  <div class="form__field">
    <label for="password">Password</label>
    <input id="password" name="password" type="password" class="form__input" placeholder="Enter your password..."
      required>
  </div>
  <div class="form__submit">
    <button id="submit" type="submit" class="form__btn__submit">Signup</button>
  </div>
</form>